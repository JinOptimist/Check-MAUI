<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HelloMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:HelloMaui.Views.Pages"
    xmlns:hc="clr-namespace:HelloMaui.Views.HeroCreation"
    Title="HelloMaui">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
        
        <!-- Стартовая страница мастера -->
        <ShellContent
            Title="Создание героя"
            ContentTemplate="{DataTemplate hc:HeroCreationPage}"
            Route="HeroCreation" />
    </TabBar>

    <!-- Вкладки шагов мастера как отдельный TabBar -->
    <TabBar Title="Создание героя: шаги" Route="HeroSteps">
        <ShellContent Title="Раса" ContentTemplate="{DataTemplate hc:RaceSelectionPage}" Route="HeroStepRace" />
        <ShellContent Title="Предыстория" ContentTemplate="{DataTemplate hc:BackgroundSelectionPage}" Route="HeroStepBackground" />
        <ShellContent Title="Профессия/Способ" ContentTemplate="{DataTemplate hc:ProfessionOrSurvivalPage}" Route="HeroStepProfOrSurv" />
        <ShellContent Title="Хобби" ContentTemplate="{DataTemplate hc:HobbySelectionPage}" Route="HeroStepHobbies" />
        <ShellContent Title="Характеристики" ContentTemplate="{DataTemplate hc:AttributesPage}" Route="HeroStepAttributes" />
    </TabBar>

</Shell>
