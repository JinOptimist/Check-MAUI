<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
	x:Class="HelloMaui.Views.HeroCreation.AttributesPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Характеристики">

	<VerticalStackLayout Padding="16" Spacing="8">
		<Label Text="Распределите 75 очков" Style="{StaticResource Title}" />
		<CollectionView x:Name="AttributesView" SelectionMode="None">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Grid ColumnDefinitions="*,Auto,Auto" Padding="6" ColumnSpacing="8">
						<Label Text="{Binding Name}"/>
						<Label Grid.Column="1" Text="{Binding Value}"/>
						<HorizontalStackLayout Grid.Column="2" Spacing="6">
							<Button Text="-" Clicked="OnDecrementClicked" />
							<Button Text="+" Clicked="OnIncrementClicked" />
						</HorizontalStackLayout>
					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
		<Label x:Name="BudgetLabel" Text="Осталось: 75" FontAttributes="Bold" />
	</VerticalStackLayout>

</ContentPage>



