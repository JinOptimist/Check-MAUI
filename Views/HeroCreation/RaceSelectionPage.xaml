<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
	x:Class="HelloMaui.Views.HeroCreation.RaceSelectionPage"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	Title="Выбор расы">

	<VerticalStackLayout
		Padding="16"
		Spacing="12">
		<Label Text="Выберите расу" Style="{StaticResource Title}" />
		<CollectionView x:Name="RacesView" SelectionMode="Single" SelectionChanged="OnRaceSelected">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Grid Padding="8">
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto" />
							<RowDefinition Height="Auto" />
						</Grid.RowDefinitions>
						<Label Text="{Binding Name}" FontAttributes="Bold" />
						<Label Grid.Row="1" Text="{Binding HintShort}" FontSize="12" TextColor="Gray" />
					</Grid>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>

</ContentPage>


